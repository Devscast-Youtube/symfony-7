{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for post in posts %}
        <article>
            <a href="{{ path('show', {id: post.id}) }}"><h1>{{ post.title | capitalize }}</h1></a>
            <p>{{ post.summary }}</p>
            <time>{{ post.publishedAt | date('d M Y') | lower }}</time>
            <time>{{ date(post.publishedAt).format('d M Y')  }}</time>
        </article> <br>
    {% endfor %}
</div>
{% endblock %}

