{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>New post</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.content) }}
        {{ form_row(form.imageFile) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Create
        </button>
        <a href="{{ path('admin_blog_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> All Posts
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
